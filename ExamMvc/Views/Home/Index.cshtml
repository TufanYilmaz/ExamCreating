@model IEnumerable<ExamMvc.Models.Quiz>
@{
    ViewData["Title"] = "Sınavlar Sayfası";
}

<div class="text-center">
    <h1 class="display-4">Sınavlar</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <a class="text-warning" asp-area="" asp-controller="Home" asp-action="NewQuiz">Yeni</a>
                </th>
                <th>@Html.DisplayNameFor(model=>model.Caption)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1; }
            @if(Model!=null)
            @foreach (var item in Model)
            {
            <tr>
                <th>@(i++)</th>
                <th>@item.RefTitle</th>
                <th>@item.CreatedDate</th>
                <th>
                   @Html.ActionLink("Sınava Gir","TakeQuiz", new {  Id = item.Id },new { @class = "btn btn-rounded btn-primary" })
                    @Html.ActionLink("Sil", "Delete",
                   new {  Id = item.Id },
                   new { @class = "btn btn-rounded btn-danger", onclick = "return confirm('Bu sınavı bütün soruları ile birlikte silmek istediğinize emin misiniz?');" })
                </th>
            </tr>
            }
        </tbody>
    </table>
</div>
